<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="48dp"
    android:paddingEnd="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingStart="16dp"
    android:fitsSystemWindows="true">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:textColor="@color/ColorHeader"
        android:textIsSelectable="true"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:text="Modern Times Cafe" />

    <include
        android:id="@+id/specs"
        layout="@layout/bathroom_specs_vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/text_title" />

    <TextView
        android:id="@+id/text_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_title"
        android:layout_marginTop="12dp"
        android:layout_toLeftOf="@id/specs"
        android:layout_toStartOf="@id/specs"
        android:gravity="center_horizontal"
        android:textColor="@color/ColorHeader"
        android:textIsSelectable="true"
        android:textSize="16sp"
        tools:text="3200 Chicago Ave\nMinneapolis, MN, US" />

    <Button
        android:id="@+id/button_maps"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text_address"
        android:layout_toLeftOf="@id/specs"
        android:layout_toStartOf="@id/specs"
        android:text="@string/open_in_maps"
        android:textColor="@color/ColorPrimaryDark" />

    <TextView
        android:id="@+id/text_comments"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/specs"
        android:layout_gravity="center_horizontal"
        android:layout_margin="8dp"
        android:background="@android:color/white"
        android:gravity="center"
        android:textColor="@color/ColorComments"
        android:textIsSelectable="true"
        android:textSize="16sp"
        tools:text="\nDirections\n\nNo directions at this time.\n\n\nComments\n\nNo comments at this time.\n" />
</RelativeLayout>